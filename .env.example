# Hierarchical Coding Agent Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider: "ollama" or "anthropic"
LLM_PROVIDER=ollama

# Ollama Settings (for local models like Qwen3-Coder)
LLM_OLLAMA_MODEL=frob/qwen3-coder-next
LLM_OLLAMA_BASE_URL=http://localhost:11434/v1
LLM_OLLAMA_TIMEOUT=300.0

# Anthropic Settings (for Claude API)
LLM_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_API_KEY=your-api-key-here

# General LLM Parameters
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4096
LLM_CONTEXT_LENGTH=32768

# =============================================================================
# Workspace Configuration
# =============================================================================

WORKSPACE_PROJECT_ROOT=/home/korety/Project/DR_2_Podcast
WORKSPACE_LOGS_PATH=/home/korety/coding-agent/logs
WORKSPACE_SANDBOX_DIR=/tmp/coding-agent-sandbox

# =============================================================================
# Database Configuration
# =============================================================================

DB_PATH=/home/korety/coding-agent/tasks.db
DB_BACKUP_ON_START=true
DB_AUTO_CHECKPOINT_INTERVAL=100

# =============================================================================
# Orchestration Configuration
# =============================================================================

ORCH_MAX_ITERATIONS=10
ORCH_ENABLE_RESUME=true
ORCH_AUTO_SAVE_INTERVAL=5

# Hierarchical Agent Models
ORCH_PM_MODEL=claude-3-5-sonnet-20241022
ORCH_LEAD_MODEL=frob/qwen3-coder-next
ORCH_MEMBER_MODEL=frob/qwen3-coder-next

# =============================================================================
# Security Configuration
# =============================================================================

SECURITY_ENABLE_SANDBOX=false
SECURITY_DOCKER_IMAGE=python:3.11-slim
SECURITY_MAX_EXECUTION_TIME=300

# =============================================================================
# Application Settings
# =============================================================================

APP_DEBUG=false
APP_LOG_LEVEL=INFO
